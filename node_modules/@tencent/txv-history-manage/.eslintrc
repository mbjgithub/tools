{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    // off-0 warn-1 error-2
    "rules": {
        "keyword-spacing": [
            2,
            {
                "overrides": {
                    "if": {
                        "after": true
                    },
                    "for": {
                        "after": true
                    },
                    "while": {
                        "after": true
                    },
                    "switch": {
                        "after": true
                    },
                    "catch": {
                        "after": true
                    }
                }
            }
        ],
        "key-spacing": [
            2,
            {
                "beforeColon": false,
                "afterColon": true,
                "mode": "strict"
            }
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "arrow-spacing": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "space-before-blocks": 2,
        "no-empty": 2,
        "no-alert": 2,
        "no-console": 0,
        "no-debugger": 1,
        "no-mixed-spaces-and-tabs": 2,
        "no-unused-vars": 2
    }
}